<% layout("/layouts/boilerplate") -%>

    <div class="row mt-3">
        <h2 class="col-6 offset-3">SignUp on ChaloChalein</h2>
        <div class="col-6 offset-3">
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" id="username" type="text" class="form-control" required>
                    <div class="valid-feedback">Badhiya lag rha hai!</div>
                    <div class="invalid-feedback">Please username enter kariye.</div>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input name="email" id="email" type="email" class="form-control" required>
                    <div class="valid-feedback">Email accha lg rha h!</div>
                    <div class="invalid-feedback">Please ek valid email daaliye.</div>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" id="password" type="password" class="form-control" required>
                    <div class="valid-feedback">Strong password!</div>
                    <div class="invalid-feedback">Please ek password enter kijiye</div>
                </div>

                <button class="btn btn-success" type="submit">SignUp</button>
            </form>

        </div>
    </div>

