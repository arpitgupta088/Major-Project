<% layout("/layouts/boilerplate") -%> <!-- boilerplate me is body ko use kr payege-->

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <br><br>
                <h3>Create a new listing</h3>
                <form method="POST" action="/listings" novalidate class="needs-validation">

                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input name="listing[title]" placeholder="Ek Catchy title add kro" type="text" class="form-control"
                            required>
                        <!--Listing[title] is used to create a title key-value pair of listing object -->
                        <div class="valid-feedback">Title badhiya lag rha hai!</div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" class="form-control" required></textarea>
                        <div class="invalid-feedback">Please ek short description add kro</div>
                    </div>

                    <div class="mb-3">
                        <label for="image" class="form-label">Image Link</label>
                        <input name="listing[image][url]" placeholder="Image ka URL daalo" type="text"
                            class="form-control">
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input name="listing[price]" placeholder="1200" class="form-control" required >
                                <div class="invalid-feedback">Please enter a valid price</div>
                        </div>

                            <div class="mb-3 col-md-8">
                                <label for="country" class="form-label">Country</label>
                                <input name="listing[country]" placeholder="India" type="text" class="form-control"
                                    required>
                                <div class="invalid-feedback">Please enter valid Country name</div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="location" class="form-label">Location</label>
                            <input name="listing[location]" placeholder="Jaipur, Rajasthan" type="text" required>
                            <div class="invalid-feedback">Please enter valid location</div>
                        </div>

                        <button class="btn btn-dark add-btn mt-3 col-2">Add</button>
                </form>
            </div>
        </div>
    </body>